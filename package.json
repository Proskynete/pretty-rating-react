{
	"name": "pretty-rating-react",
	"version": "2.0.0",
	"description": "Pretty rating formatter with FontAwesome icons",
	"main": "./lib/cjs/index.js",
	"module": "./lib/esm/index.js",
	"types": "./lib/esm/index.d.ts",
	"files": [
		"/lib"
	],
	"repository": "https://github.com/Proskynete/pretty-rating-react",
	"author": {
		"name": "Eduardo Alvarez",
		"email": "eduardo.a1993@gmail.com"
	},
	"license": "MIT",
	"keywords": [
		"Typescript",
		"Ts",
		"React",
		"Reactjs",
		"Rating",
		"Rating Component",
		"FontAwesome"
	],
	"scripts": {
		"build": "npm run build:esm && npm run build:cjs",
		"build:esm": "tsc",
		"build:cjs": "tsc --module commonjs --outDir lib/cjs",
		"lint": "tslint -p ./",
		"lint:fix": "tslint -p ./ --fix",
		"prettier:check": "prettier --check ./src/**/*.js",
		"prettier:format": "prettier --config .prettierrc --write ./src/**/*.js",
		"test": "jest",
		"test:update-snapshots": "jest --updateSnapshot",
		"test:coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls",
		"test:coverage": "jest --coverage",
		"test:watch": "jest --watchAll"
	},
	"peerDependencies": {
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"typescript": "^4.2.3"
	},
	"dependencies": {
		"coveralls": "^3.1.0",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"typescript": "^4.2.3"
	},
	"devDependencies": {
		"@types/react": "^17.0.3",
		"@types/react-dom": "^17.0.2"
	}
}
